// Storage security rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /vehicles/{uid}/{file} { allow read, write: if request.auth != null && request.auth.uid == uid; }
    match /invoices/{uid}/{file} { allow read, write: if request.auth != null && request.auth.uid == uid; }
    match /pdf/{uid}/{file}      { allow read: if request.auth != null && request.auth.uid == uid; allow write: if request.auth != null && request.auth.uid == uid; }
  }
}